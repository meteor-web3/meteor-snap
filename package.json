{
  "name": "meteor-snap",
  "version": "0.0.1",
  "description": "Meteor Snap for MetaMask.",
  "license": "ISC",
  "main": "./dist/bundle.js",
  "files": [
    "dist/",
    "images/",
    "snap.manifest.json"
  ],
  "scripts": {
    "build": "bash scripts/fixbuild.sh && cross-env-shell NODE_ENV=production NODE_OPTIONS=--max-old-space-size=4096 mm-snap build",
    "clean": "rimraf dist",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "serve": "mm-snap serve",
    "start": "bash scripts/fixbuild.sh && cross-env-shell NODE_ENV=development NODE_OPTIONS=--max-old-space-size=4096 mm-snap watch",
    "test": "jest",
    "demo": "pnpm --filter demo start"
  },
  "dependencies": {
    "@dataverse/dataverse-kernel": "^1.0.240",
    "@ethersproject/abstract-provider": "^5.7.0",
    "@metamask/snaps-types": "^3.1.0",
    "@metamask/snaps-ui": "^3.1.0",
    "assert": "^2.0.0",
    "async-hook-browser": "^0.0.6",
    "browserify-fs": "^1.0.0",
    "browserify-zlib": "^0.2.0",
    "buffer": "^6.0.3",
    "crypto-browserify": "3.12.0",
    "ethers": "5.6.9",
    "event-emitter": "^0.3.5",
    "events": "^3.3.0",
    "formdata-polyfill": "^4.0.10",
    "https-browserify": "1.0.0",
    "jose": "4.15.4",
    "net-browserify": "^0.2.4",
    "os-browserify": "0.3.0",
    "path-browserify": "1.0.1",
    "process": "^0.11.10",
    "stream-browserify": "3.0.0",
    "stream-http": "3.2.0",
    "tls-browserify": "^0.2.2",
    "viem": "^1.3.1",
    "webworkify": "^1.5.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@lavamoat/allow-scripts": "^3.0.0",
    "@metamask/auto-changelog": "^3.4.4",
    "@metamask/snaps-cli": "^4.0.0",
    "@metamask/snaps-jest": "^4.0.1",
    "@types/dotenv-webpack": "7.0.3",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "blob-polyfill": "^7.0.20220408",
    "cross-env": "^7.0.3",
    "dotenv-webpack": "7.1.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.5.0",
    "prettier": "^3.1.1",
    "rimraf": "^3.0.2",
    "through2": "^4.0.2",
    "ts-jest": "^29.1.0",
    "typescript": "^4.7.4",
    "webpack": "^5.89.0"
  }
}