{
  "compilerOptions": {
    "isolatedModules": true,
    // "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "lib": ["DOM", "ES2020"],
    "useUnknownInCatchVariables": false,
    "sourceMap": true,
    "baseUrl": "./src",
    "target": "ES2020",
    // "module": "CommonJS"
    "module": "ES2020"
  },
  "include": ["src/**/*"],
  "exclude": ["**/__snapshots__/**", "**/test/**", "**/*.test.ts", "demo/**"]
}
